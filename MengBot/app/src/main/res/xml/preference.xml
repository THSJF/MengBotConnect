<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="opendraw"
        android:title="启动时打开滑动菜单" />
    <CheckBoxPreference
        android:key="exitsettings"
        android:summary="System.exit(0)可以彻底关闭软件"
        android:title="使用System.exit(0)代替finish()" />
    <EditTextPreference
        android:dialogTitle="ip"
        android:key="ip"
        android:title="ip" />
    <EditTextPreference
        android:dialogTitle="端口"
        android:key="port"
        android:title="端口" />
	<CheckBoxPreference
        android:defaultValue="true"
        android:key="useLightTheme"
        android:summaryOff="晚上迫害不瞎眼"
        android:summaryOn="白天迫害有精神"
        android:title="使用亮主题" />
</PreferenceScreen>
